# News Collector Configuration
# Copy this file to .env and modify as needed

# Output directory for scraped data
OUTPUT_DIR=./data

# Maximum concurrent scrapers (1-5 recommended)
MAX_CONCURRENT=3

# Number of retry attempts for failed scrapes
RETRY_ATTEMPTS=3

# Delay between requests in milliseconds
DELAY_BETWEEN_REQUESTS=1000

# Include full article content (slower but more complete)
INCLUDE_CONTENT=false

# Default sources to scrape (comma-separated)
DEFAULT_SOURCES=cnn,bbc,reuters,guardian
